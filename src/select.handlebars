<div class="{{classPrefix}}-input" data-role="select">
  {{#if multiple}}
    <span data-role="selectedMulti"></span>
  {{/if}}
  <input type="text" value="" autocomplete="off" tabindex="-1" >
</div>
<div data-role="dropdown" class="{{classPrefix}}-dropdown {{#if multiple}}multi{{else}}single{{/if}}"  style="display:none">
  <div class="{{classPrefix}}-drowdown-content" data-role="content">
    {{#if multiple}}
      {{#each select}}
        <div class="{{../classPrefix}}-item" data-index="{{@index}}" data-role="item" data-value="{{{value}}}">
         <input type="checkbox" class="{{../classPrefix}}-checkbox" data-text="{{{text}}}" value="{{{value}}}">{{{text}}}
        </div>
      {{/each}}
    {{else}}
      {{#each select}}
        <div class="{{../classPrefix}}-item" data-index="{{@index}}" data-role="item" data-value="{{{value}}}">{{{text}}}</div>
      {{/each}}
    {{/if}}
  </div>
</div>
